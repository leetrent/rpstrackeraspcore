@model RPS.Web.Pages.Backlog.PtItemDetailsVm

<form method="post">
    <input type="hidden" asp-for="@Model.Id" />


    <div class="form-group row">
        <label asp-for="@Model.Title" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input type="text" asp-for="@Model.Title" class="k-textbox" style="width: 100%;"/>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <textarea asp-for="@Model.Description" class="k-textbox"style="width:100%;height:60px;"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.Estimate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <input type="range" asp-for="@Model.Estimate" min="0" max="20" step="1" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.SelectedItemType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            @*<select asp-for="@Model.SelectedItemType" asp-items="@Model.ItemTypes" class="form-control"></select>*@
            <kendo-dropdownlist
                name="SelectedItemType"
                value="@Model.SelectedItemType"
                bind-to="Model.ItemTypes"
                template-id="templateItemType"
            />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.SelectedStatus" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            @*<select asp-for="@Model.SelectedStatus" asp-items="@Model.Statuses" class="form-control"></select>*@
            <kendo-dropdownlist
                name="SelectedStatus"
                value="@Model.SelectedStatus"
                bind-to="Model.Statuses"
            />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.SelectedPriority" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            @*<select asp-for="@Model.SelectedPriority" asp-items="@Model.Priorities" class="form-control"></select>*@
            <kendo-dropdownlist
                name="SelectedPriority"
                value="@Model.SelectedPriority"
                bind-to="Model.Priorities"
                template="<span class='badge priority-#:data.toLowerCase()#'>#:data#</span>"
            />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="@Model.SelectedAssigneeId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-6">
            <kendo-dropdownlist 
                name="SelectedAssigneeId" 
                value="@Model.SelectedAssigneeId" 
                bind-to="Model.Users"
            />
        </div>
    </div>


    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</form>

<script id="templateItemType" type="text/x-kendo-template">
    <img src="@Url.Content("~/images/icon_#:data#.png")" class="backlog-icon" />
    <span>#: data #</span>
</script>